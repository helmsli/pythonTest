<meta charset="UTF-8">
<div class="modal-dialog" ng-controller="addRole">
    <div class="modal-content">
        <div class="modal-header">
        	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">增加角色</h4>
        </div>
        <div class="modal-body">       	
        	<form action="#" method="post" id="theForm" class="form-column">
        		<div class="row clearfix">
			        <div class="col-sm-4 col-xs-12 form-control-label">
			            <label for="email_address_2">角色名称:</label>
			        </div>
			        <div class="col-sm-8 col-xs-12">
			            <div class="form-group">
			                <div class="form-line">
			                    <input type="text" class="form-control" placeholder="请输入角色名称" ng-model="role.name" name="name" id="name" data-error="UserName error" data-tip="Please enter the role name" />
			                </div>
			            </div>
			        </div>
			    </div>
			    
			    <div class="row clearfix">
			        <div class="col-sm-4 col-xs-12 form-control-label">
			            <label for="email_address_2">描述:</label>
			        </div>
			        <div class="col-sm-8 col-xs-12">
			            <div class="form-group">
			                <div class="form-line">
			                    <textarea class="form-control" placeholder="请描述角色信息" ng-model="role.disc" name="disc" >sdfsdfsd</textarea>
			                </div>
			            </div>
			        </div>
			    </div>
			</form>     	
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary m-r-8 m-w-80 waves-effect" data-dismiss="modal">关闭</button>
            <button type="button" class="btn btn-success m-l-8 m-w-80 waves-effect" ng-click="editRole()">提交</button>
        </div>
    </div>
</div>
