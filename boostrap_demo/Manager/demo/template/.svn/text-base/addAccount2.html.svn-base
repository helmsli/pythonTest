<meta charset="UTF-8">
<div class="modal-dialog" ng-controller="addUser">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">新建员工</h4>
        </div>
        <div class="modal-body">       	
        	<form action="#" method="post" id="theForm" class="form-column">
        		<div class="row clearfix">
			        <div class="col-sm-4 col-xs-12 form-control-label">
			            <label for="btsId">ID:</label>
			        </div>
			        <div class="col-sm-8 col-xs-12">
			            <div class="form-group">
			                <div class="form-line">
			                   	<input type="text" ng-model="user.btsId" class="form-control" name="btsId" id="btsId" />
			                </div>
			            </div>
			        </div>
			    </div>
			    
			    <div class="row clearfix">
			        <div class="col-sm-4 col-xs-12 form-control-label">
			            <label for="btsName">网元名称:</label>
			        </div>
			        <div class="col-sm-8 col-xs-12">
			            <div class="form-group">
			                <div class="form-line">
			                    <input type="text" ng-model="user.btsName" class="form-control" id="btsName" />
			                </div>
			            </div>
			        </div>
			    </div>
			    <div class="row clearfix">
			        <div class="col-sm-4 col-xs-12 form-control-label">
			            <label for="btsType">网元类型:</label>
			        </div>
			        <div class="col-sm-8 col-xs-12">
			            <div class="form-group">
			                <div class="form-line">
			                   <input type="text" ng-model="user.btsType" class="form-control" id="btsType" />
			                </div>
			            </div>
			        </div>
			    </div>
			</form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary m-r-8 m-w-80 waves-effect" data-dismiss="modal">关闭</button>
            <button type="button" class="btn btn-success m-l-8 m-w-80 waves-effect" ng-click="editUser()">保存</button>
        </div>
    </div>
</div>
